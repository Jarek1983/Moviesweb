<div class="row" style="padding-top: 30px;">
  <div class="col"> </div>
    <div class="col-md-10">
        <p>
          <strong>Title:</strong>
            <%= @movie.name %>
        </p>
        <p>
          <strong>Date:</strong>
            <%= @movie.premiere_date.strftime("%d.%m.%Y") %>
        </p>
        <p>
          <strong>Length:</strong>
            <%= @movie.length %> minutes
        </p>
        <p>
          <strong>Description</strong>
            <%= @movie.description %>
        </p>
        <p>
          <strong>Genres</strong>
            <% @movie.genres.each do |genre| %>
            <%= link_to genre.name, genre_path(genre) %>
            <% end %> 
        </p>
        <p>
          <strong>Directors</strong>
            <% @movie.directors.each do |director| %>
            <%= link_to director.name, director_path(director) %>
            <% end %> 
        </p>
        <p>
          <strong>Screenwriters</strong>
            <% @movie.screenwriters.each do |screenwriter| %>
            <%= link_to screenwriter.name, screenwriter_path(screenwriter) %>
            <% end %> 
        </p>
          <p>
          <strong>Actors</strong>
            <% @movie.actors.each do |actor| %>
            <%= link_to actor.name, actor_path(actor) %>
            <% end %> 
        </p>
        <p>
          <strong>Country:</strong>
            <%= @movie.country %>
        </p>
        <p>
          <% if @movie.movie.present? %>
            <%= video_tag(@movie.movie, controls: true, type: 'video/mp4', style: "width:25%") %>
          <% end %>
        </p>

        <p>
          <strong>Created at:</strong>
            <%= @movie.created_at %>
        </p>
        <p>
          <strong>Updated at:</strong>
            <%= @movie.updated_at %>
        </p>

      <div class="field" style="100%;">
      
        <h4>Add comment</h4>

          <% if current_user %>
        
          <%= render 'comments/form' %>

          <% else %>

            <%= link_to 'Sign In', new_session_path %> or 
            <%= link_to 'Sign Up', new_user_path %> to created a comment.

          <% end %>

        <h4>Comments</h4>
      
          <%= render @movie.comments.order(created_at: :desc) %><br>

          <%= link_to 'Back', movies_path, class: 'btn btn-md btn-info' %>
        
      </div>
    </div>
  <div class="col"> </div>
</div>