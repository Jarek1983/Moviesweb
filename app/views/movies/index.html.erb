<div>
  <%= link_to "Add new movie", new_movie_path %>
</div>

<div>
  <h2>List of films: </h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Premiere date</th>
      <th>Length</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Director</th>
      <th>Scenarist</th>
      <th>Country</th>
      <th colspan="3">Editing Options</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.name %></td>
      <td><%= movie.premiere_date.strftime("%d.%m.%Y")%></td>
      <td><%= movie.length %> minutes</td>
      <td><%= movie.description %></td>
      <td><%= movie.genre %></td>
      <td><%= movie.director %></td>
      <td><%= movie.scenarist %></td>
      <td><%= movie.country %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
      <td><%= link_to 'Delete', movie_path(movie), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>