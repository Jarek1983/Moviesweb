<div class="row" style="padding-top: 10px;">
  <div class="col"> </div>
    <div class="col-md-12">

      <h2>List of movies: </h2>

        <% if current_user && current_user.admin? %>

    <p>
        <%= link_to "Add new movie", new_movie_path, class: 'btn btn-lg btn-info' %>
    </p>

        <% end %>

    <table class="table table-hover">
      <thead>
        <tr>
        <% if current_user && current_user.admin? %>

          <th>Title</th>
          <th>Premiere</th>
          <th>Length</th>
          <th>Description</th>
          <th>Genre</th>
          <th>Director</th>
          <th>Scenarist</th>
          <th>Country</th>
          <th colspan="3">Editing Options</th>

        <% else %>

          <th>Title</th>
          <th>Premiere</th>
          <th>Length</th>
          <th>Description</th>
          <th>Genre</th>
          <th>Director</th>
          <th>Scenarist</th>
          <th>Country</th>
          <th colspan="1">Show</th>

        <% end %>

        </tr>
      </thead>
      <tbody>
          <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.name %></td>
          <td><%= movie.premiere_date.strftime("%d.%m.%Y")%></td>
          <td><%= movie.length %></td>
          <td><%= truncate(movie.description, length: 25) %></td>
          <td><%= movie.genre %></td>
          <td><%= movie.director %></td>
          <td><%= movie.scenarist %></td>
          <td><%= movie.country %></td> 

          <td><%= link_to 'Show', movie_path(movie), class: 'btn btn-sm btn-info'%></td>

          <% if current_user && current_user.admin? %>

          <td><%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-sm btn-warning' %></td>
          <td><%= link_to 'Delete', movie_path(movie), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %></td>

          <% end %>
          
        </tr>
          <% end %>
      </tbody>
    </table>

    </div>
  <div class="col"> </div>
</div>