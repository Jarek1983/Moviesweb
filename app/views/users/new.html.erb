<div class="row" style="padding-top: 0%;">
	<div class="col-md-4">
<h1>Create account! </h1>
<%= form_for @user do |f| %>
<div class="field" style="100%;">
<% if @user.errors.any? %>
	<div id="Error_explanation">
		<h2>
			<%= pluralize(@user.errors.count, "error") %>
			prohibited this article from being saved:
		</h2>
			<p>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
			<% end %>
			</ul>
			</p>
	</div>
	<% end %>
	<%= f.text_field :userid, placeholder: 'Input a User ID', class: 'form-control' %><br>
	<%= f.email_field :email, placeholder: 'Input your email', class: 'form-control' %><br>
	<%= f.password_field :password, placeholder: 'Create a password', class: 'form-control' %><br>
	<%= f.password_field :password_confirmation, placeholder: 'Confirm password', class: 'form-control' %><br>
	<%= f.submit 'Create Account' %>
	<% end %>
</div>
		<p>
			<%= link_to 'Movies', movies_path, class: 'btn btn-md btn-info' %>
			<%= link_to 'Home', root_path, class: 'btn btn-md btn-primary' %>
		</p>
	</div>
</div>