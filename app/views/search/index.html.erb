<div class="row">
	<div class="col"></div>
	  <div class="col-md-6">
	  	
		<h4>List of all searched position</h4>
	
		<table class="table table-hover table-striped table-danger">

			<tr>
			  <th>Name</th>
			  <th>Text</th>
			  <th colspan="1">Options</th>
			</tr>

				<% @movies.each do |movie| %>
			<tr>
			  <td>
				<%= movie.name %>
			  </td>
			  <td>
				<%= truncate(movie.description, length: 75) %>
			  </td>	
			  <td>
				<%= link_to 'Show', movie_path(movie), class: 'btn btn-sm btn-info' %>
			  </td>
			    <% end %>
			</tr>

				<% @actors.each do |actor| %>
			<tr>
			  <td>
				<%= actor.name %>
			  </td>
			  <td>
				<%= truncate(actor.description, length: 75) %>
			  </td>	
			  <td>
				<%= link_to 'Show', actor_path(actor), class: 'btn btn-sm btn-info' %>
			  </td>
			    <% end %>
			</tr>

				<% @directors.each do |director| %>
			<tr>
			  <td>
				<%= director.name %>
			  </td>
			  <td>
				<%= truncate(director.description, length: 75) %>
			  </td>	
			  <td>
				<%= link_to 'Show', director_path(director), class: 'btn btn-sm btn-info' %>
			  </td>
			    <% end %>
			</tr>

				<% @screenwriters.each do |screenwriter| %>
			<tr>
			  <td>
				<%= screenwriter.name %>
			  </td>
			  <td>
				<%= truncate(screenwriter.description, length: 75) %>
			  </td>	
			  <td>
				<%= link_to 'Show', screenwriter_path(screenwriter), class: 'btn btn-sm btn-info' %>
			  </td>
			    <% end %>
			</tr>

		</table>
			<p>
				<%= link_to 'Back', movies_path, class: 'btn btn-sm btn-primary'  %>
			</p>
	  </div>
	<div class="col"></div>
</div>
