
<p>
  <strong> Author: </strong>
  <%= comment.commenter %>

  <strong> Rating: </strong>
  <%= comment.rating %>
</p>

<p>
  <strong> Text: </strong>
  <%= comment.body %>
</p>

<p>
<strong> Created at: </strong>
  <%= comment.created_at %>

  <% if current_user && current_user.admin? %>

<p>
<%= link_to "Delete", movie_comment_path(@movie, comment),
					  class: 'btn btn-md btn-danger',
                      method: :delete,
                      data: { confirm: "Are you sure?"}%>
</p>

  <% end %>