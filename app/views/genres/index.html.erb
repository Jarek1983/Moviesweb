<div class="row" style="padding-top: 10px;">
  <div class="col"> </div>
    <div class="col-md-12">

      <h4>Genres</h4>

        <% if current_user && current_user.admin? %>

          <p>
            <%= link_to 'New Genre', new_genre_path, class: 'btn btn-lg btn-info' %>
          </p>

        <% end %>

          <table class="table table-hover">
            <thead>
              <tr class="table-active">
                <% if current_user && current_user.admin? %>

                  <th>Name</th>
                  <th>Description</th>
                  <th colspan="3">Editing Options</th>

                <% else %>

                  <th>Name</th>
                  <th>Description</th>
                  <th colspan="1">Options</th>

                <% end %>
              </tr>
            </thead>

            <tbody>

              <% @genres.each do |genre| %>
                <tr class="table-secondary">
                      <td><%= genre.name %></td>
                      <td><%= genre.description %></td>
                      <td><%= link_to 'Show', genre, class: 'btn btn-md btn-info' %></td>

                    <% if current_user && current_user.admin? %>

                      <td><%= link_to 'Edit', edit_genre_path(genre), class: 'btn btn-md btn-warning' %></td>
                      <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-md btn-danger' %></td>

                    <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        
    </div>
  <div class="col"> </div>
</div>


