<%= render 'common/errors', model: @actor %>

  <%= form_for @actor, html: {multipart: true} do |f| %>

    <div class="field" style="100%;">
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :birthday %><br>
        <%= f.date_field :birthday, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :description %><br>
        <%= f.text_area :description, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :country %><br>
        <%= f.select :country, options_for_select(['Polska', 'Argentyna','Czechy', 'USA', 'Wielka Brytania', 'Francja', 'Niemcy']) %>
      </p>
      
        <%= f.hidden_field :user_id, value: session[:user_id] %>
      <p>
      <p>
        <%= f.label :photo %><br>
        <%= f.file_field :photo, class: 'form-control' %>
      </p>
        <%= f.submit class: 'btn btn-lg btn-success'%>
      </p>

    </div>
<% end %>