<div class="row" style="padding-top: 30px;">
  <div class="col"> </div>
    <div class="col-md-10">

        <% if @actor.photo.present? %>
          <%= image_tag(@actor.photo.url, style: "width:50%;") %>
        <% end %> 

        <p>
          <strong>Name:</strong>
            <%= @actor.name %>
        </p>
        <p>
          <strong>Birthday:</strong>
            <%= @actor.birthday.strftime("%d.%m.%Y") %>
        </p>
        <p>
          <strong>Description:</strong>
            <%= @actor.description %>
        </p>
        <p>
        <p>
          <strong>Country:</strong>
            <%= @actor.country %>
        </p>
        <p>
          <strong>Created at:</strong>
            <%= @actor.created_at %>
        </p>
        <p>
          <strong>Updated at:</strong>
            <%= @actor.updated_at %>
        </p>

          <%= link_to 'Back', actors_path, class: 'btn btn-md btn-info' %>

        <% if current_user && current_user.admin? %>

          <%= link_to 'Edit', edit_actor_path(@actor),class: 'btn btn-md btn-warning'  %> 
          <%= link_to 'Destroy', @actor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-md btn-danger'  %>

        <% end %>

    </div>
  <div class="col"> </div>
</div>