<div class="row">
	<div class="col"></div>
	  <div class="col-md-6">
		<h1>List of all Actors</h1>
	
		<table class="table table-hover table-striped table-responsive-xs table-danger">
			<tr>
			  <th>Title</th>
			  <th>Text</th>
			  <th colspan="1">Show Actors</th>
			</tr>
				<% @actors.each do |actor| %>
			<tr>
			  <td>
				<%= actor.name %>
			  </td>
			  <td>
				<%= truncate(actor.description, length: 75) %>
			  </td>	
			  <td>
				<%= link_to 'Show', actor_path(actor), class: 'btn btn-sm btn-info' %>
			  </td>
			    <% end %>
			</tr>
		</table>

			<p>
				<%= link_to 'Back to all Actors', actors_path, class: 'btn btn-sm btn-primary'  %>
			</p>
	  </div>
	<div class="col"></div>
</div>