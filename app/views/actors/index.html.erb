<div class="row" style="padding-top: 10px;">
  <div class="col"> </div>
    <div class="col-md-12">

      <h2>List of actors: </h2>

        <% if current_user && current_user.admin? %>

    <p>
        <%= link_to "Add actor", new_actor_path, class: 'btn btn-lg btn-info' %>
    </p>

        <% end %>

    <table class="table table-hover">
      <thead>
        <tr>
        <% if current_user && current_user.admin? %>

          <th>Name</th>
          <th>Surname</th>
          <th>Birthday</th>
          <th>Description</th>
          <th>Country</th>
          <th>Movies</th>
          <th colspan="3">Editing Options</th>

        <% else %>

          <th>Name</th>
          <th>Surname</th>
          <th>Birthday</th>
          <th>Description</th>
          <th>Country</th>
          <th>Movies</th>
          <th colspan="1">Show</th>

        <% end %>

        </tr>
      </thead>
      <tbody>
          <% @actors.each do |actor| %>
        <tr>
          <td><%= actor.name %></td>
          <td><%= actor.surname %></td>
          <td><%= actor.birthday%></td>
          <td><%= truncate(actor.description, length: 25) %></td>
          <td><%= actor.country %></td> 
          <td><%= actor.movies %></td>

          <td><%= link_to 'Show', actor_path(actor), class: 'btn btn-sm btn-info'%></td>

          <% if current_user && current_user.admin? %>

          <td><%= link_to 'Edit', edit_actor_path(actor), class: 'btn btn-sm btn-warning' %></td>
          <td><%= link_to 'Delete', actor_path(actor), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %></td>

          <% end %>
          
        </tr>
          <% end %>
      </tbody>
    </table>

    </div>
  <div class="col"> </div>
</div>
