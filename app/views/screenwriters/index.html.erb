<div class="row" style="padding-top: 10px;">
  <div class="col"> </div>
    <div class="col-md-12">

      <h4>Screenwriters</h4>

        <% if current_user && current_user.admin? %>

          <p>
            <%= link_to 'New Screenwriter', new_screenwriter_path, class: 'btn btn-lg btn-info' %>
          </p>
        <% end %>

        <table class="table table-hover">
          <thead>
            <tr class="table-light">
              <% if current_user && current_user.admin? %>
                <th>Name</th>
                <th>Description</th>
                <th colspan="3">Editing Options</th>

              <% else %>

                  <th>Name</th>
                  <th>Description</th>
                  <th colspan="1">Options</th>

              <% end %>
            </tr>
          </thead>

          <tbody>

            <% @screenwriters.each do |screenwriter| %>

              <tr class="table-dark text-dark">
                  <td><%= screenwriter.name %></td>
                  <td><%= screenwriter.description %></td>
                  <td><%= link_to 'Show', screenwriter, class: 'btn btn-md btn-info' %></td>

                <% if current_user && current_user.admin? %>

                  <td><%= link_to 'Edit', edit_screenwriter_path(screenwriter), class: 'btn btn-md btn-warning' %></td>
                  <td><%= link_to 'Destroy', screenwriter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-md btn-danger' %></td>

                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  <div class="col"> </div>
</div>

